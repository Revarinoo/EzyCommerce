<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cart_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"></ImageView>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRODUCT NAME"
                    android:textSize="20dp"
                    android:textColor="@color/design_default_color_on_secondary"></TextView>

                <TextView
                    android:id="@+id/cart_desc"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do "
                    android:textSize="12dp"
                    android:justificationMode="inter_word"
                    android:layout_marginTop="10dp"></TextView>

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$300"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/design_default_color_on_secondary"
                    android:textSize="17dp"></TextView>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginEnd="7dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pcs"
                    android:textSize="11dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="58dp"
                    android:layout_marginEnd="27dp"></TextView>

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:inputType="number"
                    android:layout_alignParentEnd="true"
                    android:text="11"
                    android:paddingLeft="4dp"
                    android:textSize="13dp"
                    android:justificationMode="inter_word"
                    android:layout_marginEnd="22dp"></EditText>

                <Button
                    android:id="@+id/btn_up"
                    android:layout_width="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="15dp"
                    android:layout_marginTop="46dp"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/btn_up"></Button>

                <View
                    android:layout_width="15dp"
                    android:layout_marginTop="61dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:layout_height="1dp"></View>

                <Button
                    android:id="@+id/btn_down"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="62dp"
                    android:background="@drawable/btn_down"></Button>

            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>